<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AIMS - Instructor Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/modern-ui.css">
</head>
<body>
  <header class="header">
    <div class="header-content">
      <div class="header-left">
        <svg class="header-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
        </svg>
        <div>
          <h1>AIMS</h1>
          <p class="subtitle">Academic Information Management System</p>
        </div>
      </div>
      <div class="header-right">
        <div class="user-info">
          <p class="user-name"><%= user.name %></p>
          <p class="user-role"><%= user.user_id %> • Instructor</p>
        </div>
        <button onclick="logout()" class="btn-logout">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Logout
        </button>
      </div>
    </div>
  </header>

  <main class="main-content">
    <!-- Statistics Overview -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-card-header">
          <div class="stat-card-icon primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
          </div>
        </div>
        <div class="stat-card-title">Total Courses</div>
        <div class="stat-card-value" id="totalCourses">0</div>
        <div class="stat-card-change">Courses offered</div>
      </div>

      <div class="stat-card">
        <div class="stat-card-header">
          <div class="stat-card-icon warning">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
        </div>
        <div class="stat-card-title">Pending Requests</div>
        <div class="stat-card-value" id="pendingRequests">0</div>
        <div class="stat-card-change">Awaiting your approval</div>
      </div>

      <div class="stat-card">
        <div class="stat-card-header">
          <div class="stat-card-icon success">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="8.5" cy="7" r="4"></circle>
              <polyline points="17 11 19 13 23 9"></polyline>
            </svg>
          </div>
        </div>
        <div class="stat-card-title">Total Requests</div>
        <div class="stat-card-value" id="totalEnrollments">0</div>
        <div class="stat-card-change positive">Across all courses</div>
      </div>

      <div class="stat-card">
        <div class="stat-card-header">
          <div class="stat-card-icon primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
        </div>
        <div class="stat-card-title">Active Students</div>
        <div class="stat-card-value" id="activeStudents">0</div>
        <div class="stat-card-change">Approved enrollments</div>
      </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="nav-tabs">
      <button class="tab-button active" onclick="showTab('myCourses')">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
        </svg>
        My Courses
      </button>
      <button class="tab-button" onclick="showTab('approvals')">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="8.5" cy="7" r="4"></circle>
          <polyline points="17 11 19 13 23 9"></polyline>
        </svg>
        Enrollment Requests
      </button>
    </div>

    <!-- My Courses Tab -->
    <div id="myCoursesTab" class="tab-content active">
      <h2>My Offered Courses</h2>

      <div class="card">
        <h3>Create New Course</h3>
        <form id="createCourseForm" class="form-grid">
          <div class="form-group">
            <label>Course Code *</label>
            <input type="text" id="courseCode" name="code" required placeholder="e.g., CS301" pattern="[A-Z]{2,4}[0-9]{3,4}">
          </div>
          <div class="form-group">
            <label>Course Title *</label>
            <input type="text" id="courseTitle" name="title" required placeholder="Enter course title">
          </div>
          <div class="form-group">
            <label>Department *</label>
            <input type="text" id="courseDept" name="department" required placeholder="e.g., CSE">
          </div>
          <div class="form-group">
            <label>Credits *</label>
            <input type="number" id="courseCredits" name="credits" min="1" max="20" required placeholder="1-20">
          </div>
          <div class="form-group">
            <label>Session *</label>
            <input type="text" id="courseSession" name="session" required placeholder="e.g., 2025-26 Sem II">
          </div>
          <div class="form-group full-width">
            <button type="submit" class="btn-primary">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              Create Course
            </button>
            <span id="createCourseMessage"></span>
          </div>
        </form>
      </div>

      <div class="table-card">
        <h3>Your Courses</h3>
        <div id="instructorCoursesContainer" class="course-cards-grid"></div>
      </div>
    </div>

    <!-- Enrollment Requests Tab -->
    <div id="approvalsTab" class="tab-content">
      <h2>Student Enrollment Requests</h2>

      <div class="filter-card">
        <div class="filter-grid">
          <div class="form-group">
            <label>Filter by Status</label>
            <select id="approvalStatusFilter">
              <option value="all">All Requests</option>
              <option value="pending">Pending</option>
              <option value="approved">Approved</option>
              <option value="rejected">Rejected</option>
            </select>
          </div>
          <div class="form-group">
            <button class="btn-primary" onclick="applyApprovalFilter()">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
              </svg>
              Apply Filter
            </button>
          </div>
        </div>
      </div>

      <div class="table-card">
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Student Name</th>
                <th>Student ID</th>
                <th>Course Code</th>
                <th>Course Title</th>
                <th>Requested On</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="instructorEnrollmentsTable">
              <tr>
                <td colspan="7" class="text-center">
                  <div class="loading"></div> Loading enrollment requests...
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal: Course-specific enrollments -->
  <div id="courseEnrollmentsModal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="modalCourseTitle"></h2>
        <button class="close-btn" onclick="closeModal()">×</button>
      </div>

      <div class="bulk-actions">
        <label>
          <input type="checkbox" id="selectAll" onchange="toggleSelectAll(this.checked)"> Select All
        </label>
        <button class="btn-bulk-approve" onclick="bulkUpdate('approved')">Approve Selected</button>
        <button class="btn-bulk-reject" onclick="bulkUpdate('rejected')">Reject Selected</button>
      </div>

      <div class="table-container">
        <table id="courseEnrollmentsTable">
          <thead>
            <tr>
              <th>Student Name</th>
              <th>Student ID</th>
              <th>Course</th>
              <th>Requested On</th>
              <th>Status</th>
              <th>Select</th>
            </tr>
          </thead>
          <tbody>
            <tr><td colspan="6" class="text-center">Click a course card to load enrollments</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <script>
    window.currentUser = {
      id: <%= user.id %>,
      user_id: "<%= user.user_id %>"
    };
  </script>

  <script src="/js/instructor.js"></script>
</body>
</html>
