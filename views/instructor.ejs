<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AIMS - Instructor Dashboard</title>  <!-- FIXED -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<header class="header">
    <div class="header-content">
        <div class="header-left">
            <svg class="header-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                 viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
            <div>
                <h1>AIMS</h1>
                <p class="subtitle">Academic Information Management System</p>
            </div>
        </div>
        <div class="header-right">
            <div class="user-info">
                <p class="user-name"><%= user.name %></p>
                <p class="user-role"><%= user.user_id %> (Instructor)</p>  <!-- FIXED -->
            </div>
            <button onclick="logout()" class="btn-logout">Logout</button>
        </div>
    </div>
</header>

<main class="main-content">
    <div class="nav-tabs">
        <button class="tab-button active" onclick="showTab('myCourses')">My Courses</button>
        <button class="tab-button" onclick="showTab('approvals')">Enrollment Requests</button>
    </div>

    <!-- My Courses Tab -->
    <div id="myCoursesTab" class="tab-content active">
        <h2>My Offered Courses</h2>

        <div class="card">
            <h3>Create New Course</h3>
            <form id="createCourseForm" class="form-grid">
                <div class="form-group">
                    <label>Code</label>
                    <input type="text" id="courseCode" name="code" required placeholder="e.g. CS301">
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" id="courseTitle" name="title" required placeholder="Course title">
                </div>
                <div class="form-group">
                    <label>Department</label>
                    <input type="text" id="courseDept" name="department" required placeholder="e.g. CSE">
                </div>
                <div class="form-group">
                    <label>Credits</label>
                    <input type="number" id="courseCredits" name="credits" min="1" max="20" required>
                </div>
                <div class="form-group">
                    <label>Session</label>
                    <input type="text" id="courseSession" name="session" required placeholder="2025-26 Sem II">
                </div>
                <div class="form-group full-width">
                    <button type="submit" class="btn-primary">Create Course</button>
                    <span id="createCourseMessage"></span>
                </div>
            </form>
        </div>

        <div class="table-card">
            <h3>Your Courses</h3>
            <div class="table-container">
                <table>
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Department</th>
                        <th>Credits</th>
                        <th>Session</th>
                    </tr>
                    </thead>
                    <tbody id="instructorCoursesTable">
                    <tr><td colspan="5" class="text-center">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Enrollment Requests Tab -->
    <div id="approvalsTab" class="tab-content">
        <h2>Enrollment Requests</h2>
        <div class="table-card">
            <div class="table-container">
                <table>
                    <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Student ID</th>
                        <th>Course</th>
                        <th>Requested</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody id="instructorEnrollmentsTable">
                    <tr><td colspan="7" class="text-center">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<script src="/js/instructor.js"></script>  <!-- FIXED -->
</body>
</html>
