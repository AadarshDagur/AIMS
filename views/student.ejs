<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AIMS - Student Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <svg class="header-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <div>
                    <h1>AIMS</h1>
                    <p class="subtitle">Academic Information Management System</p>
                </div>
            </div>
            <div class="header-right">
                <div class="user-info">
                    <p class="user-name"><%= user.name %></p>
                    <p class="user-role"><%= user.user_id %> (Student)</p>
                </div>
                <button onclick="logout()" class="btn-logout">Logout</button>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="nav-tabs">
            <button class="tab-button active" onclick="showTab('courses')">Available Courses</button>
            <button class="tab-button" onclick="showTab('enrollments')">My Enrollments</button>
        </div>

        <!-- Available Courses Tab -->
        <div id="coursesTab" class="tab-content active">
            <h2>Offered Courses</h2>
            
            <div class="filter-card">
                <div class="filter-grid">
                    <div class="form-group">
                        <label>Offering Department</label>
                        <select id="filterDept">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Code</label>
                        <input type="text" id="filterCode" placeholder="Search code...">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" id="filterTitle" placeholder="Search title...">
                    </div>
                    <div class="form-group">
                        <button class="btn-primary" onclick="searchCourses()">Search</button>
                    </div>
                </div>
            </div>

            <div class="table-card">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Title</th>
                                <th>Department</th>
                                <th>Instructor</th>
                                <th>Credits</th>
                                <th>Session</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="coursesTable">
                            <tr><td colspan="7" class="text-center">Loading...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- My Enrollments Tab -->
        <div id="enrollmentsTab" class="tab-content">
            <h2>My Enrollments</h2>
            <div class="table-card">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Course Code</th>
                                <th>Course Title</th>
                                <th>Enrolled Date</th>
                                <th>Instructor Status</th>
                                <th>Advisor Status</th>
                                <th>Final Status</th>
                            </tr>
                        </thead>
                        <tbody id="enrollmentsTable">
                            <tr><td colspan="6" class="text-center">Loading...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/student.js"></script>
</body>
</html>